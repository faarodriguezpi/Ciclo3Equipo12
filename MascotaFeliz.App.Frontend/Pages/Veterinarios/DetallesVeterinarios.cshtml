@page
@model MascotaFeliz.App.Frontend.Pages.DetallesVeterinariosModel
@{
}

<h1> Detalles Veterinario </h1>

<div class="container">
    <div class="row" >
        <div class="col-sm" class="shadow-sm p-4 mb-4 bg-white">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><h5 class="mb-1">Id</h5> @Model.veterinario.Id </li>
                <li class="list-group-item"><h5 class="mb-1">Nombre: </h5>@Model.veterinario.Nombres</li>
                <li class="list-group-item"><h5 class="mb-1">Apellidos:</h5>@Model.veterinario.Apellidos</li>
                <li class="list-group-item"><h5 class="mb-1">Dirección: </h5>@Model.veterinario.Direccion</li>
                <li class="list-group-item"><h5 class="mb-1">Telefono: </h5>@Model.veterinario.Telefono</li>
                <li class="list-group-item"><h5 class="mb-1">Tarjeta Profesional:</h5>@Model.veterinario.TarjetaProfesional</li>
            </ul>
        </div>
    </div>
</div>

<a asp-page="./ListaVeterinarios" class="btn btn-secondary"> Lista de Veterinarios </a>